<UserControl x:Class="Visual_Crawl.VisualLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" x:Name="ThisElement" 
             Height="50" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left">
    <Grid>
        <Ellipse x:Name="Ellipse" Fill="Red"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="20" Text="{Binding Children, ElementName=ThisElement}"/>
    </Grid>
</UserControl>
